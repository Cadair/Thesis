  journal = {The Astrophysical Journal},
  author = {Bogdan, T. J and Carlsson, M and Hansteen, V and {McMurry}, A and Rosenthal, C. S and Johnson, M and Petty-Powell, S and Zita, E. J and Stein, R. F and {McIntosh}, S. W and Nordlund, {\AA}},
  month = jul,
